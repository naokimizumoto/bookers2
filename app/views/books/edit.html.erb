<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
     <%= form_with model:@book, local:true do |f| %>
     <div class="form-group">
        <%= f.label :Title %><br />
        <%= f.text_field :title, autofocus: true, class: "form-control book_title"%>
     </div>
       <div class="form-group">
        <%= f.label :Opinion %><br />
        <%= f.text_field :body, autofocus: true, class: "form-control book_body" %>
     </div>
     <div class="form-group">
       <%= f.submit 'Update Book', class: "btn btn-success" %>
     </div>
    <% end %>
    <%=link_to "Show", book_path(@book)%>
    <%=link_to "Back", books_path%>
    </div>
  </div>
</div>