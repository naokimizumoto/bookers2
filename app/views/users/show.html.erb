<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
  <%= render 'books/left', book: @book ,user: @user%>

 <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <%= link_to  user_path(@user)do %>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
         <% end %>
        <td><%=link_to book.title,book_path(book) %></td>
        <td><%=book.body %></td>
      </tr>
      <% end %>
    </tbody>
</table>
</div>


  </div>
</div>